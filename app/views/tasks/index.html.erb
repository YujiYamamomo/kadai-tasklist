<%= "USER: #{current_user.name}" %>
<h1>タスクリスト一覧</h1>

<% if @task.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>タスク</th>
        <th>ステイタス</th>
      </tr>
    </thead>
    <tbody>
      <% @task.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.content %></td>
          <td><%= task.status %></td>
        </tr>
      <% end %>
      </tbody>
  </table>
  <div>
  <%== pagy_bootstrap_nav(@pagy) %>
  </div>
<% end %>

